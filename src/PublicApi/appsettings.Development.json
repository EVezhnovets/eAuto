{
  "Serilog": { 
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "System": "Error",
        "Microsoft": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp} [{Level}] - Message: {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "eAutoCatalogConnection": "Server=localhost;Database=eAutoDataDB;Trusted_Connection=True;User Id=my-eauto;Password=Test1*;MultipleActiveResultSets=true;TrustServerCertificate=True"
  }
}
@model DriveTypeViewModel

<form method="post" asp-controller="DriveType" asp-action="Create">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h3 class="text-black-50">Create new Drive Type</h3>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Name"></label>
			<input asp-for="@Model.Name" class="form-control">
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-success btn-sm" style="width:100px">
			<i class="bi bi-check-lg"></i>
			Create
		</button>
		<a asp-controller="Transmission" asp-action="index" class="btn btn-primary btn-sm" style="width:100px">
			<span class="bi bi-reply"> Back</span>
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
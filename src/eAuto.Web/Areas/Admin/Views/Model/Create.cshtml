@model OneToOneModel<ModelViewModel>

<form method="post" asp-controller="Model" asp-action="Create">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h3 class="text-black-50">Create new Model</h3>
		</div>
		<div class="row">
			<div class="col mb-3">
				<label asp-for="@Model.ViewModel!.Brand"></label>
				<select asp-for="@Model.ViewModel!.BrandId" asp-items="@Model.ModelFK" class="form-select">
				<option disabled selected>--Select Category--</option>
				</select>
			<span asp-validation-for="@Model.ViewModel!.BrandId" class="text-danger"></span>
			</div>
			<div class="col mb-3">
				<label asp-for="@Model.ViewModel!.Name"></label>
				<input asp-for="@Model.ViewModel!.Name" class="form-control">
				<span asp-validation-for="@Model.ViewModel!.Name" class="text-danger"></span>
			</div>
		</div>
		<button type="submit" class="btn btn-success btn-sm" style="width:100px">
			<i class="bi bi-check-lg"></i>
			Create
		</button>
		<a asp-controller="Model" asp-action="Index" class="btn btn-primary btn-sm" style="width:100px">
			<span class="bi bi-reply"> Back</span>
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
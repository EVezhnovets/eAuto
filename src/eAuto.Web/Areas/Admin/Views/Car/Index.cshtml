@model IEnumerable<CarViewModel>

<partial name="_Notification" />
<div class="container-fluid p-3" />
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary text-black-50">Cars</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Car" asp-action="Create" class="btn btn-outline-success">
            <i class="bi bi-pen">Add</i>
        </a>
    </div>
</div>


@if (Model.Count() == 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Car Name
                </th>
            </tr>
        </thead>
    </table>
}
else
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Picture</th>
                <th>Brand & Model</th>
                <th>Generation</th>
                <th>Engine </th>
                <th>Transmission</th>
                <th>Price Initial</th>
                <th>Year</th>
                <th width="110px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="5%">
                        @obj.CarId
                    </td>
                    <td width="15%" style="padding:0.3rem">
                      <div>
                        <a asp-controller="Car" asp-action="Index" asp-route-id="@obj.CarId">
                            <img src=@obj.PictureUrl class="float-start" style="width:100%" />
                        </a>
                    </div>
                    </td>
                    <td width="10%">
                        <p>@obj.Brand</p>
                        <p>@obj.Model</p>
                    </td>
                    <td width="20%">
                        @obj.Generation
                    </td>
                    <td width="10%">
                        @obj.Engine
                    </td>
                    <td width="15%">
                        @obj.Transmission
                    </td>
                    <td width="10%">
                        @obj.PriceInitial
                    </td>
                    <td width="5%">
                        @obj.Year.Year.ToString()
                    </td>
                    <td width="10%" align="center">
                        <div class="btn-toolbar justify-content-between" role="toolbar" style="width:5rem">
                            <a asp-controller="Car" asp-action="Edit" asp-route-id="@obj.CarId" class="btn btn-outline-primary">
                                <i class="bi bi-wrench"></i>
                            </a>

                            <form method="post" asp-controller="Car" asp-action="Delete" asp-route-id="@obj.CarId">
                                <input asp-for="@obj.PictureUrl" hidden />
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
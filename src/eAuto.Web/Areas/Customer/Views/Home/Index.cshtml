@model IEnumerable<CarViewModel>
<div style="width:90%; margin: auto">
	<div class="row  pb-3">
		@foreach (var product in Model)
		{
			<div class="col-lg-3 col-md-6">
				<div class="row p-2">
					<div class="col-12 p-1">
						<div class="card text-white bg-dark">
							<img src="@product.PictureUrl" class="card-img-top" />
							<div class="card-body" style="border-top: solid white 1px; border-bottom: solid white 3px; text-transform: uppercase">
								<div class="pl-1">
									<p class="card-title h5 text-white">@product.Brand | @product.Model </p>
									<p class="card-title text-muted"><b>@product.Generation</b></p>
									<p class="card-title text-warning"><b>@product.Year.Year.ToString()</b></p>
									<p class="card-title text-white"><b>@product.Engine</b></p>
								</div>
								@*<div class="pl-1">
							<p>List Price: <strike><b>$@product.PriceInitial.ToString("0.00")</b></strike></p>
							</div>*@
								<div class="pl-1">
									<p><sub style="text-transform:lowercase">auction</sub> Price:</p>
									<span style="text-transform:lowercase">from</span> <h4><span class="text-success">$</span>@product.PriceInitial.ToString("0.00")</h4>
								</div>
							</div>
						</div>
						<div>
							<a asp-action="Details" type="button" class="btn btn-outline-dark form-control" asp-route-id="@product.CarId">
								Details
							</a>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>
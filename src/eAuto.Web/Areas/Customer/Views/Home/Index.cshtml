@model IEnumerable<CarViewModel>
<div style="width:90%; margin: auto">
	<div class="row  pb-3">
		@foreach (var product in Model)
		{
			<div class="col-lg-3 col-md-6">
				<div class="row p-2">
					<div class="col-12 p-1">
						<div class="card" style="border: solid #343a40 1px;border-radius: unset">
							<img src="@product.PictureUrl" class="card-img-top" style="border-radius:unset"/>

							<div class="card-body">
								<div class="pl-1">
									<p class="card-title h5 text-primary">@product.Brand | @product.Model </p>
									<p class="card-title text-secondary"><b>@product.Generation</b></p>
									<p class="card-title text-primary"><b>@product.Year.Year.ToString()</b></p>
									<p class="card-title text-muted"><b>@product.Engine</b></p>
								</div>
								<div class="pl-1">
									<p><sub>auction</sub> Price: from <b><span class="text-success">$</span>@product.PriceInitial.ToString("0.00")</b></p>
								</div>
							</div>
						</div>
						<div style="margin-top: 1rem">
							<a asp-action="Details" type="button" class="btn btn-outline-dark form-control" asp-route-id="@product.CarId">
								Details
							</a>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>
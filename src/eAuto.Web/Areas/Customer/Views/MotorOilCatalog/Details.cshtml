@model MotorOilBasketItemViewModel

<form method="post" class="pt-4">
    <div class="card container" style="border: solid 1px; margin:auto; max-width:1000px">
        <div class="card-header bg-dark text-light ml-0 row" style="padding:2rem">
            <div class="col-12 col-md-6">
                <h1 class="text-white">@Model.MotorOil.ProductBrand</h1>
                <p class="text-white">@Model.MotorOil.Name</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-light pt-2" style="height:30px;">@Model.MotorOil.Viscosity</span>
                <span class="badge bg-warning pt-2" style="height:30px;">@Model.MotorOil.Composition</span>
            </div>
        </div>
        <div class="card-body row container" style="justify-content: center">
            <div class="row">
                <div class="col-lg-6">
                    <img src="@Model.MotorOil.PictureUrl" width="100%" class="rounded" />
                </div>
                <div class="col-lg-6" style="text-align: center; margin-top:6rem">
                    <h5 class="text-primary pb-2">Brand: <span>@Model.MotorOil.ProductBrand</span></h5>
                    <h5 class="text-primary pb-2">Name: <span>@Model.MotorOil.Name</span></h5>
                    <h5 class="text-primary pb-2">Viscosity: <span>@Model.MotorOil.Viscosity</h5>
                    <h5 class="text-primary pb-2">Composition: <span>@Model.MotorOil.Composition</h5>
                    <h5 class="text-primary pb-2">Volume: <span>@Model.MotorOil.Volume L</span></h5>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h3 class="text-primary pb-2 mt-2">Price: @Model.MotorOil.Price.ToString("c", WebConstants.CultureInfoEN_US)</h3>
                </div>
            </div>
        </div>
        <div>
            <div class="row" style="margin: 1rem">
                <hr />
                <div class="col-md-6 pb-1">
                    <a class="btn btn-outline-dark form-control " style="height:50px; border:none" asp-action="Index">Back to Catalog</a>
                </div>
                <div class="col-md-6 pb-1">
                    <button type="submit" value="Order" class="btn btn-success form-control" style="height:50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>
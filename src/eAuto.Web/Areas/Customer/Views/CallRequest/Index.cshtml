@model OrderCarViewModel

<form method="post" asp-controller="CallRequest" asp-action="Index" style="margin-top:3rem">
    <div class="row">
        <div class="col-md-4" style="margin:auto">
            <div>
                <h1>Call me back</h1>
            </div>
            <div>
                <div class="mb-3">
                    <label asp-for="@Model.Name">Your Name: @Model.Name</label>
                    <input asp-for="@Model.Name" type="text" class="form-control">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.PhoneNumber">Your Phone: @Model.PhoneNumber</label>
                    <input asp-for="@Model.PhoneNumber" type="text" class="form-control">
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Message">Your Message: @Model.Message</label>
                    <textarea asp-for="@Model.Message" class="form-control"></textarea>
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div>
                <button type="button" class="btn btn-secondary">Back to Catalog</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
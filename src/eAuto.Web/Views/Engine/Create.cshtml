@model EngineCreateViewModel

<form method="post" asp-controller="Engine" asp-action="Create">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h3 class="text-black-50">Create new Engine</h3>
		</div>
		<div class="row">
			<div class="col mb-3">
				<label asp-for="@Model.EngineVModel.Brand"></label>
				<select asp-for="@Model.EngineVModel.BrandId" asp-items="@Model.Brands" class="form-select">
					<option disabled selected>--Select Category--</option>
				</select>
				<span asp-validation-for="@Model.EngineVModel.BrandId" class="text-danger"></span>
			</div>
			<div class="col mb-3">
				<label asp-for="@Model.EngineVModel.Model"></label>
				<select asp-for="@Model.EngineVModel.ModelId" asp-items="@Model.Models" class="form-select">
					<option disabled selected>--Select Category--</option>
				</select>
				<span asp-validation-for="@Model.EngineVModel.ModelId" class="text-danger"></span>
			</div>
			<div class="col mb-3">
				<label asp-for="@Model.EngineVModel.Generation"></label>
				<select asp-for="@Model.EngineVModel.GenerationId" asp-items="@Model.Generations" class="form-select">
					<option disabled selected>--Select Category--</option>
				</select>
				<span asp-validation-for="@Model.EngineVModel.GenerationId" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="col mb-3">
				<label asp-for="@Model.EngineVModel.IdentificationName"></label>
				<input asp-for="@Model.EngineVModel.IdentificationName" class="form-control">
				<span asp-validation-for="@Model.EngineVModel.IdentificationName" class="text-danger"></span>
			</div>
			<div class="col mb-3">
				<label asp-for="@Model.EngineVModel.Type"></label>
				<input asp-for="@Model.EngineVModel.Type" class="form-control">
				<span asp-validation-for="@Model.EngineVModel.Type" class="text-danger"></span>
			</div>
			<div class="col mb-3">
				<label asp-for="@Model.EngineVModel.Capacity">Capacity <sup>g/cc</sup></label>
				<input asp-for="@Model.EngineVModel.Capacity" class="form-control">
				<span asp-validation-for="@Model.EngineVModel.Capacity" class="text-danger"></span>
			</div>
			<div class="col mb-3">
				<label asp-for="@Model.EngineVModel.Power">Power <sup>hp</sup></label>
				<input asp-for="@Model.EngineVModel.Power" class="form-control">
				<span asp-validation-for="@Model.EngineVModel.Power" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="col mb-3">
				<label asp-for="@Model.EngineVModel.Description"></label>
				<input asp-for="@Model.EngineVModel.Description" class="form-control">
				<span asp-validation-for="@Model.EngineVModel.Description" class="text-danger"></span>
			</div>
		</div>
		<button type="submit" class="btn btn-success btn-sm" style="width:100px">
			<i class="bi bi-check-lg"></i>
			Create
		</button>
		<a asp-controller="Engine" asp-action="Index" class="btn btn-primary btn-sm" style="width:100px">
			<span class="bi bi-reply"> Back</span>
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}